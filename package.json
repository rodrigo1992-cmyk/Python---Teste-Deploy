{
  "name": "teste-deploy-tailwind",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./assets/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./assets/styles.css --watch",
    "build:ts": "tsc",
    "dev:ts": "tsc --watch",
    "build": "npm run build:ts && npm run build:css",
    "dev": "concurrently \"npm run dev:ts\" \"npm run dev:css\""
  },
  "devDependencies": {
    "tailwindcss": "^3.4.7",
    "postcss": "^8.4.24",
    "autoprefixer": "^10.4.14",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  }
}
